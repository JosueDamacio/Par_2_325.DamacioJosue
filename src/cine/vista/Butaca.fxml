<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml" fx:id="rootPane">
    <children>
        <ImageView fx:id="bgImage" preserveRatio="false">
            <image>
                <Image url="/media/background.png"/>
            </image>
        </ImageView>

        <BorderPane prefWidth="1250" prefHeight="720">
            <top>
                <HBox alignment="CENTER" style="-fx-padding:20;">
                    <Label fx:id="titulo" text="Seleccionar butacas" styleClass="auth-title"/>
                </HBox>
            </top>

            <center>
                <VBox spacing="12" alignment="TOP_CENTER" style="-fx-padding:20;">
                    <HBox alignment="CENTER">
                        <Label fx:id="pantallaLabel" text="PANTALLA" styleClass="pantalla"/>
                    </HBox>

                    <GridPane fx:id="grid" hgap="8" vgap="8"/>
                </VBox>
            </center>

            <bottom>
                <HBox spacing="12" alignment="CENTER" style="-fx-padding:12;">
                    <Label fx:id="totalLabel" text="Total: $ 0.00" styleClass="compra-label"/>
                    <Button fx:id="confirmarBtn" text="Confirmar compra" styleClass="btn-comprar"/>
                    <Button fx:id="volverBtn" text="Volver" styleClass="btn-ghost"/>
                </HBox>
            </bottom>
        </BorderPane>
    </children>
</StackPane>