<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml" fx:id="rootPane">
    <children>
        <ImageView fx:id="bgImage" preserveRatio="false">
            <image>
                <Image url="/media/background.png"/>
            </image>
        </ImageView>

        <BorderPane prefWidth="1250" prefHeight="720">
            <top>
                <HBox alignment="TOP_RIGHT" style="-fx-padding:12;">
                    <Button fx:id="btnAdmin" text="Admin" />
                </HBox>
            </top>
            <center>
                <VBox alignment="CENTER" spacing="20">
                    <padding>
                        <Insets top="40" right="40" bottom="40" left="40"/>
                    </padding>
                    <Button fx:id="btnComprar" text="Comprar boletos" prefWidth="400" prefHeight="80" style="-fx-font-size:24px; -fx-font-weight:bold; -fx-background-color: #2A6FAD; -fx-text-fill: white;" />
                    <Button fx:id="btnSalir" text="Salir" prefWidth="200" prefHeight="40" style="-fx-background-color: #C0392B; -fx-text-fill: white;" />
                </VBox>
            </center>
        </BorderPane>
    </children>
</StackPane>