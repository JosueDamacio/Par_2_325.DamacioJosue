<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<StackPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml" fx:id="rootPane">
    <children>
        <ImageView fx:id="bgImage" preserveRatio="false">
            <image>
                <Image url="/media/background.png"/>
            </image>
        </ImageView>

        <BorderPane prefWidth="1250" prefHeight="720">
            <center>
                <!-- el fondo transparente por las dudas, el tamaÃ±o se aplica en cellfactory -->
                <ListView fx:id="listaSalas" prefWidth="700" prefHeight="520"
                          style="-fx-background-color: transparent; -fx-control-inner-background: transparent;" />
            </center>
            <right>
                <HBox spacing="10" style="-fx-padding:10;">
                    <Label fx:id="infoSala" text="Seleccione una sala" style="-fx-text-fill: white; -fx-font-size: 18px;"/>
                </HBox>
            </right>
            <bottom>
                <HBox spacing="10" style="-fx-padding:10;">
                    <Button fx:id="btnVolver" text="Volver" styleClass="btn-ghost"/>
                    <Button fx:id="btnVerButacas" text="Ver butacas" style="-fx-background-color:#1C3D5E; -fx-text-fill: white;"/>
                </HBox>
            </bottom>
        </BorderPane>
    </children>
</StackPane>